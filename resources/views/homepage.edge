<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <style>
        .ads-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }
        .ad {
            width: calc(25% - 10px); /* Four ads per row with space between */
            margin-bottom: 20px;
            border: 1px solid #ccc;
            padding: 10px;
        }
    </style>
</head>
<body>


    <div class="container mt-5">
        <h1>Welcome to Kyle's Kleinanzeigen</h1>
        <div class="row">
            @each(anzeige in anzeigen)
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ anzeige.titel }}</h5>
                        <p class="card-text">{{ anzeige.beschreibung }}</p>
                        <p class="card-text"><small class="text-muted">Preis: â‚¬{{ anzeige.preis }}</small></p>
                    </div>
                </div>
            </div>
            @endeach
        </div>
    </div>
    

    <!-- Bootstrap JS (optional) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
