<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Startseite</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <style>
        .ads-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }
        .ad {
            width: calc(25% - 10px); /* Four ads per row with space between */
            margin-bottom: 20px;
            border: 1px solid #ccc;
            padding: 10px;
        }
        .profile-image {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #fff;
            box-shadow: 0 2px 6px rgba(0,0,0,0.3);
        }
        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: space-between; /* Stellt die Inhalte vertikal auf */
        }
        .profile-image2 {
            width: 30px; /* Kleineres Bild */
            height: 30px; /* Gleiche Höhe und Breite für Rundung */
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #fff;
            box-shadow: 0 2px 6px rgba(0,0,0,0.3);
            position: absolute;
            bottom: 10px; /* Abstand vom unteren Rand */
            right: 10px; /* Abstand vom rechten Rand */
        }
        .card-body {
            padding-bottom: 40px; /* Gibt Platz für das Bild unten im Card */
        }
        .ad-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>
<body>   
    <div class="container mt-3">
        <h1>Anzeigen</h1>
        <div class="row">
            @each(anzeige in anzeigen)
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="mb-3">           
                        <img src="{{ anzeige.ad_image }}" alt="Anzeigebild" class="img-thumbnail ad-image">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ anzeige.titel }}</h5>
                        <p class="card-text">{{ anzeige.beschreibung }}</p>
                        <p class="card-text"><small class="text-muted">Preis: €{{ anzeige.preis }}</small></p>
                    </div>  
                    <a href="/chats/create/{{ anzeige.user_id }}">
                        <img src="{{ anzeige.profile_image }}" alt="Profilbild des Anzeigenerstellers" class="profile-image2">
                    </a>
                </div>
            </div>
            @endeach
        </div>
    </div>
    <!-- Bootstrap JS (optional) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
